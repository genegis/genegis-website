  <dataIdInfo>
    <idCitation>
      <resTitle>Geographic Distance Matrix</resTitle>
    </idCitation>
    <idAbs>&lt;DIV
    STYLE="text-align:Left;"&gt;&lt;DIV&gt;&lt;DIV&gt;&lt;P&gt;&lt;SPAN&gt;Computes
    a full pairwise distance matrix between all input locations.
    Calculations are performed using &lt;/SPAN&gt;&lt;A
    href="http://en.wikipedia.org/wiki/Vincenty's_formulae"&gt;&lt;SPAN&gt;Vincenty's
    formulae&lt;/SPAN&gt;&lt;/A&gt;&lt;SPAN&gt;, accurate to within
    0.5mm.&lt;/SPAN&gt;&lt;/P&gt;&lt;/DIV&gt;&lt;/DIV&gt;&lt;/DIV&gt;</idAbs>
    <idCredit>Created by the geneGIS team: Dori Dick, Shaun
    Walbridge, Scott Baker, Dawn Wright</idCredit>
    <searchKeys>
      <keyword>analysis</keyword>
      <keyword>geodesic</keyword>
      <keyword>matrix</keyword>
      <keyword>distance</keyword>
    </searchKeys>
  </dataIdInfo>
